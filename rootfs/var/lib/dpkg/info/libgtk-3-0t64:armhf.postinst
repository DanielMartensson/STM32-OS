#!/bin/sh
set -e

IMMODULES_DIR=/usr/lib/arm-linux-gnueabihf/gtk-3.0/3.0.0/immodules

if [ "$1" = triggered ]; then
    # This is triggered everytime an application installs a
    # GTK immodule loader
    /usr/lib/arm-linux-gnueabihf/libgtk-3-0t64/gtk-query-immodules-3.0 --update-cache || true
    exit 0
fi



# Also handle the initial installation
if [ -d "$IMMODULES_DIR" ]; then
     /usr/lib/arm-linux-gnueabihf/libgtk-3-0t64/gtk-query-immodules-3.0 --update-cache || true
fi

